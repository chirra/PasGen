<Window x:Class="PasGen.WindowSettings"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="WindowSettings" Height="300" Width="300">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <ComboBox x:Name="ComboBoxLanguage" HorizontalAlignment="Left" Margin="10,51,0,0" VerticalAlignment="Top" Width="120" Grid.Column="1" SelectedIndex="0">
            <Button Content="RU" />
            <Button Content="EN" />
        </ComboBox>
        <Button x:Name="ButtonOk" Grid.ColumnSpan="2" Content="Button" HorizontalAlignment="Left" Margin="98,189,0,0" VerticalAlignment="Top" Width="75" Click="ButtonOk_Click"/>
    </Grid>



</Window>
